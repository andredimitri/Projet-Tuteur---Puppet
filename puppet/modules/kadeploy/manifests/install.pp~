class kadeploy::install {
  package {
    "kadeploy3-common":
      require => File["/etc/apt/source.list.d/kadeploy.list"],
      ensure => installed;
  }

  user {
    "kadeploy":
      ensure  => present,
      uid     => "1001",
      gid     => "1001",
      shell   => "/bin/sh",
      home    => "/var/lib/kadeploy",
      managehome => true;
  }
} 
